{
  "name": "theme-o-rama-workspace",
  "version": "0.3.5",
  "private": true,
  "description": "Theme-o-rama monorepo workspace",
  "scripts": {
    "lint": "pnpm -r lint",
    "lint:fix": "pnpm -r exec -- eslint . --fix",
    "prettier": "prettier --write .",
    "prettier:check": "prettier --check .",
    "build": "pnpm -r --filter theme-o-rama build",
    "test": "pnpm --filter theme-o-rama test",
    "test:watch": "pnpm --filter theme-o-rama test:watch",
    "test:ui": "pnpm --filter theme-o-rama test:ui",
    "test:coverage": "pnpm --filter theme-o-rama test:coverage",
    "dev:nextjs": "pnpm --filter theme-o-rama-nextjs-test dev",
    "dev:nextjs-pages": "pnpm --filter theme-o-rama-nextjs-pages-test dev",
    "dev:tauri": "pnpm --filter theme-o-rama-app dev"
  },
  "devDependencies": {
    "@eslint/js": "^9.38.0",
    "@typescript-eslint/eslint-plugin": "^8.36.0",
    "@typescript-eslint/parser": "^8.36.0",
    "eslint": "^9.38.0",
    "prettier": "^3.6.2",
    "typescript-eslint": "^8.36.0"
  },
  "pnpm": {
    "overrides": {
      "parse5": "^7.1.2"
    },
    "onlyBuiltDependencies": [
      "@swc/core",
      "@tailwindcss/oxide",
      "esbuild",
      "sharp",
      "unrs-resolver"
    ]
  }
}
